<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductoApp.CarritoPage"
             Title="Carrito de Compras">
    <StackLayout>
        <Label Text="Detalles del Carrito" FontSize="20" HorizontalOptions="CenterAndExpand" Margin="0,20,0,10"/>
        <Label x:Name="NombreLabel" FontSize="18" HorizontalOptions="CenterAndExpand"/>
        <Label x:Name="CantidadLabel" FontSize="18" HorizontalOptions="CenterAndExpand"/>
        <Label x:Name="PrecioLabel" FontSize="18" HorizontalOptions="CenterAndExpand"/>

        <Button Text="Realizar pedido" Clicked="OnClickComprar" />
    </StackLayout>
</ContentPage>



